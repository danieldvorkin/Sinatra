<h1>Contact View</h1>
<div class="well" id="contact-well">
  <ul>
  	<% @contacts.each do |contact| %>
    	<li><h2><i><%= contact.first_name %> <%= contact.last_name %></i></h2>
    	<a class="btn btn-default" href="/contacts/<%= contact.id %>">Edit</a>  
    	<form action="/contacts/ <%= contact.id %>" method="post" id="delete-contact-form">
    		<input name="_method" type="hidden" value="delete" />
    		<input class="btn btn-default" type="submit" value="Delete"/>
    	</form>
    	<ul>
    		<h5><u>Details about contact</u></h5>
    		<li><i>Email:</i> <%= contact.email %> </li>
    		<li><i>Note:</i> <%= contact.note %> </li>
    	</ul>
    	</li><hr>
  	<% end %>
  </ul>
</div>

