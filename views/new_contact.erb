<form action="/contacts<%=@contact ? "/#{@contact.id}" : ''%>" method="post">
	<table>
		<tr>
			<td>First Name: </td>
			<td><input type="text" name="first_name" value="<%=@contact ? @contact.first_name : ''%>"></td>
		</tr>
  		<tr>
  			<td>Last Name: </td>
  			<td><input type="text" name="last_name" value="<%=@contact ? @contact.last_name : ''%>"></td>
  		</tr>
  		<tr>
  			<td>Email: </td>
  			<td><input type="text" name="email" value="<%=@contact ? @contact.email : ''%>"></td>
  		</tr>
  		<tr>
  			<td>Note: </td>
  			<td><input type="text" name="note" value="<%=@contact ? @contact.note : ''%>"></td>
  		</tr>
  		<tr>
  			<td><input type="submit" name="Submit"></td>
  		</tr>
  	</table>
</form>
