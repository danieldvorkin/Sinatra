<form class="form-vertical" action="/contacts<%=@contact ? "/#{@contact.id}" : ''%>" method="post">
	<div class="form-group">
		<label for="inputFirst" class="col-sm-2 control-label">First Name:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="first_name" value="<%=@contact ? @contact.first_name : ''%>">
			</div>
	</div>
	<div class="form-group">
		<label for="inputLast" class="col-sm-2 control-label">Last Name:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="last_name" value="<%=@contact ? @contact.last_name : ''%>">
			</div>
	</div>
	<div class="form-group">
		<label for="inputEmail" class="col-sm-2 control-label">Email:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="email" value="<%=@contact ? @contact.email : ''%>">
			</div>
	</div>
	<div class="form-group">
		<label for="inputNote" class="col-sm-2 control-label">Notes:</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="note" value="<%=@contact ? @contact.note : ''%>">
			</div>
		<input type="submit" class="btn btn-default" name="Submit">
	</div>
</form>
